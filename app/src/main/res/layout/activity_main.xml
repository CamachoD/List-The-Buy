<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListOfProducts"
        android:orientation="horizontal"
        android:background="#407ED382">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
        <include layout="@layout/toolbar"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_list_id"
                android:layout_width="388dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_marginStart_Recycler"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_marginLeft="@dimen/layout_marginLeft_Recycler"
                android:orientation="horizontal"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_list_products"
            android:layout_width="@dimen/width_FloatingAction"
            android:layout_height="@dimen/height_Floatingaction"
            android:clickable="true"
            android:background="#fcfcfc"
            android:src="@drawable/ic_add_list"
            app:backgroundTintMode="src_in"
            android:layout_marginStart="@dimen/layout_margin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintVertical_bias="0.941"
            android:focusable="true" app:backgroundTint="#2EA70D"/>


</androidx.constraintlayout.widget.ConstraintLayout>